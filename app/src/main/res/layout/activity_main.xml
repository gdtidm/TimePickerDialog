<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/teks_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Android Time\nPicker Dialog"
        android:theme="@style/colorTextPrimary"
        android:textSize="24dp"
        android:fontFamily="@font/poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/line_primary"
        app:layout_constraintTop_toBottomOf="@id/teks_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:theme="@style/backgroundLine"
        android:layout_width="100dp"
        android:layout_height="0.5dp" />
    <TextView
        android:id="@+id/teks_body1"
        app:layout_constraintTop_toBottomOf="@id/line_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:text="Pada kali ini, kita akan membahas salah satu\nwidget basic yang bernama Time Picker. Widget ini\nberfungsi untuk membantu user untuk memilih waktu."
        android:textAlignment="center"
        android:theme="@style/colorTextSecondary"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/teks_body2"
        app:layout_constraintTop_toBottomOf="@id/teks_body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:text="Sebagai contoh pada tutorial kali ini, kita akan\ngunakan widget Button. Nantinya, disaat Button ini kita\ntekan maka akan muncul dialog yang berisi Time Picker."
        android:textStyle="bold"
        android:textSize="14dp"
        android:theme="@style/colorTextSecondary"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/content_timepicker"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/teks_body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_time_picker"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:text="Time Picker"
            android:textSize="12dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:theme="@style/backgroundBody"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_hasil_time_picker"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Android Time Picker Dialog"
            android:textAlignment="center"
            android:theme="@style/colorTextSecondary"
            android:textStyle="bold"
            android:textSize="12dp"
            android:fontFamily="@font/poppins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>